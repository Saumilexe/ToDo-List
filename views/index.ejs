<%- include("partials/header.ejs") %>

<body>
    <h1> <div class="h1Tag"><%= today %></div></h1>
    <div class="box">
    <!--Bootstrap for list of tasks-->
    <div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center" style="width: 60%;">
        <div class="list-group" style="width: 100%;">
            <% for (i = 0; i < taskArray.length; i++) { %>
          <label class="list-group-item d-flex gap-3">
            <input class="form-check-input flex-shrink-0" type="checkbox" value="" style="font-size: 1.375em;">
            <span id="text<%= i %>" class="pt-1 form-checked-content">
              <strong><%= taskArray[i] %> </strong>
            </span>
          </label>
          <% } %>
        </div>
      </div>
        <div class="form">
            <form action="/submit" method="POST">
                <input type="text" name="New Task" placeholder="New Task" id="newForm" required>
                <button type="submit" class="btn btn-outline-primary">+</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    
    <%- include("partials/line-through.ejs") %>
  </body>
</html>
